<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      styleClass="command-box-container">
  <HBox alignment="CENTER_LEFT" spacing="10.0">
    <Label text="MediBook" styleClass="medibook-label"/>
    <TextField fx:id="commandTextField" onAction="#handleCommandEntered" promptText="Type your command here..." HBox.hgrow="ALWAYS"/>
  </HBox>
</VBox>
